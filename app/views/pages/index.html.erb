<% if @pages.empty? %>
  <div class="hero-unit">
    <h3>It's time to...</h3>
    <h2><%= link_to "Create your first markdown page!", new_page_path %></h2>
  </div>
<% else %>

<h1>All Pages</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Last Update</th>
      <th></th>
      </tr>
  </thead>
  <tbody>
    <% @pages.each do |page|%>
      <tr>
        <td><strong><%= link_to page.title, page %></strong></td>
        <td><%= time_ago_in_words(page.updated_at) %> ago</td>
        <td>
          <%= link_to "Edit", edit_page_path(page), :class => 'btn btn-primary btn-small' %>
          <%= link_to "Delete", page_path(page), :method => "delete", :confirm => "Are you sure?", :class => 'btn btn-danger btn-small' %>
        </td>
      </tr>
    <% end %>  
  </tbody>
</table>
<% end %>