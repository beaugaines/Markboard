
<fieldset>
  <div class="control-group">
    <div class="controls">
      <p class="help-block">The page must have a title</p>
      <%= f.text_field :title, :class => 'input-title' %>
      <%= f.text_area :content, :class => 'input-markdown' %>
    </div>
  </div>
</fieldset>

<div class="form-actions">
  <button class="btn btn-primary" type="submit">Save</button> or
	<%= link_to "Cancel", pages_path %>
</div>
